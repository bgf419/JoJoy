<% content_for :title, "The Big List of Happiness" %>

  <h1>The Big List of Happiness Techniques</h1>

  <table>
    <thead>
      <tr>
        <th align="left">Name</th>
        <th colspan="3"></th>
        <th align="right">
          <div class="btn-group">
            <button type="button" class="btn dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Sort
            </button>
            <div class="dropdown-menu">
              <a class="dropdown-item" href="../sort_articles/positive psychology">Positive Psychology</a>
              <a class="dropdown-item" href="../sort_articles/stoicism">Philosophy</a><br/>
              <a class="dropdown-item" href="../sort_articles/folk">Folk</a>
            </div>
          </div>
        </th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= link_to article.name, article %></td>
          <td><%#= link_to 'Edit', edit_article_path(article) %></td>
          <td><%#= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

